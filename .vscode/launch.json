{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üîç Debug Current Test (Step-by-step)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["playwright", "test", "${relativeFile}", "--workers=1"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "name": "üîç Debug All Tests (Step-by-step)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["playwright", "test", "--workers=1"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "name": "üé≠ Playwright Inspector",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["playwright", "test", "${relativeFile}", "--debug"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
